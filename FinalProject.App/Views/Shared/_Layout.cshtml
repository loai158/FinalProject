        </div>
    </header>

    <!-- Main Content -->
    <div class="container my-4">
        <main role="main" class="py-4">
            @RenderBody()
        </main>
    </div>
    <!-- Footer -->
    <footer class="text-light py-5">
        <div class="container">
            <div class="row g-4 text-center text-md-start">
                <div class="col-md-4">
                    <h5 class="fw-bold mb-3">FinalProject.App</h5>
