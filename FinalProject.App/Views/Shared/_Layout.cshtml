@using FinalProject.Data.Models.IdentityModels
@using Microsoft.AspNetCore.Identity
@inject UserManager<ApplicationUser> UserManager
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"] - FinalProject.App</title>
    <meta name="description" content="FinalProject.App - Building solutions that matter. Crafted with care and precision." />
    <meta name="keywords" content="healthcare, hospital, doctors, services, appointments" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <!-- Favicons -->
    <link href="~/assets/img/favicon.png" rel="icon" />
    <link href="~/assets/img/apple-touch-icon.png" rel="apple-touch-icon" />
    <!-- Fonts -->
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;700&family=Poppins:wght@400;600;700&display=swap" rel="stylesheet">
    <!-- Bootstrap & Icons -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" rel="stylesheet" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet" />
    <!-- Vendor CSS Files -->
    <link href="~/assets/vendor/aos/aos.css" rel="stylesheet" />
    <link href="~/assets/vendor/glightbox/css/glightbox.min.css" rel="stylesheet" />
    <link href="~/assets/vendor/swiper/swiper-bundle.min.css" rel="stylesheet" />
    <!-- Main CSS File -->
    <link href="~/assets/css/main.css" rel="stylesheet" />
    @* navbar stylying link *@
    <link href="~/css/NavStyle.css" rel="stylesheet" />
    <!-- Toastr CSS -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.css" rel="stylesheet" />

</head>
@{
    var user = await UserManager.GetUserAsync(User);
    var imageUrl = user?.ImgProfile ?? "default.jpg";
}
<body class="bg-light">
    <!-- Header -->
    <header id="header" class="header sticky-top shadow-sm">
        <nav class="navbar navbar-expand-lg">
            <div class="container">
                <a class="navbar-brand" href="/">E-Clinic</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#mainNav"
                        aria-controls="mainNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse justify-content-end" id="mainNav">
                    <ul class="navbar-nav mb-2 mb-lg-0 align-items-center">
                        @if (User.IsInRole("Doctor"))
                        {
                            <li class="nav-item"><a class="nav-link" href="/Customer/Doctor/Home">Home</a></li>
                        }
                        @if (User.IsInRole("Nurse"))
                        {
                            <li class="nav-item"><a class="nav-link" href="/Customer/Nurse/Home">Home</a></li>
 
                        }
                        @if (User.IsInRole("Patient"))

                        } 
                        @if (User.IsInRole("Patient") || User.IsInRole("Admin"))
 
                        {
                            <li class="nav-item"><a class="nav-link" href="/Customer/Home/Index">Home</a></li>
                        }

                        @if (User.IsInRole("Patient") || User.IsInRole("Admin"))
                        {
                            <li class="nav-item"><a class="nav-link" href="/Customer/Cart/Index">Cart</a></li>
                        }

                        @* <li class="nav-item"><a class="nav-link" href="/Customer/Patient/Profile">Profile</a></li> *@
                        <li class="nav-item"><a class="nav-link" href="/Customer/About/">About</a></li>
                        <li class="nav-item"><a class="nav-link" href="#services">Services</a></li>
                        @if (User.IsInRole("Admin") || User.IsInRole("SuperAdmin"))
                        {
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="Admin" asp-controller="Home" asp-action="Index">Management System</a>
                            </li>

                        }

                        @if (User.Identity.IsAuthenticated)
                        {

                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown"
                                   aria-expanded="false">More</a>
                                <ul class="dropdown-menu border-0 shadow-sm">

                                    <li><a class="dropdown-item" href="#departments">Departments</a></li>
                                    <li><a class="dropdown-item" href="/customer/doctor">Doctors</a></li>
                                    <li><hr class="dropdown-divider" /></li>

                                    <li><a class="dropdown-item" href="#contact">Contact Us</a></li>
                                    @* <li><hr class="dropdown-divider" /></li> *@
                                    @* <li><a class="dropdown-item text-danger" asp-area="Identity" asp-controller="Account" asp-action="Logout">Logout</a></li> *@

                                </ul>
                            </li>
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle d-flex align-items-center text-dark" href="#" id="userDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                    <span>Welcome: @User.Identity.Name</span>
                                </a>
                                <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="userDropdown">
                                    @if (User.IsInRole("Doctor"))
                                    {
                                        <li class="nav-item">
                                            <a class="nav-link text-dark" asp-area="Customer" asp-controller="Doctor" asp-action="Profile">Doctor Profile</a>
                                        </li>
                                    }
                                    @if (User.IsInRole("Patient"))
                                    {
                                        <li class="nav-item">
                                            <a class="nav-link text-dark" asp-area="Customer" asp-controller="Patient" asp-action="Profile">Patient Profile</a>
                                        </li>
                                    } @if (User.IsInRole("Nurse"))
                                    {
                                        <li class="nav-item">
                                            <a class="nav-link text-dark" asp-area="Customer" asp-controller="Nurse" asp-action="Profile">Nurse Profile</a>
                                        </li>
                                    }
                                    <li><hr class="dropdown-divider"></li>
                                    <li><a class="dropdown-item" href="/Identity/Account/Logout">Logout</a></li>
                                </ul>
                            </li>

                            <li class="nav-item">
                                <a href="#appointment" class="btn btn-appointment d-flex align-items-center justify-content-center" title="Make Appointment">
                                    <i class="bi bi-calendar-check"></i>
                                </a>
                            </li>
                            <li class="nav-item ms-2">
                                <button id="themeToggle" class="theme-toggle-btn" title="Toggle Theme">
                                    <i class="bi bi-palette-fill"></i> <!-- Changed to Creative Icon -->
                                </button>
                            </li>
                        }
                        else
                        {


                            <ul class="navbar-nav">
                                <li class="nav-item dropdown">
                                    <a class="nav-link dropdown-toggle text-dark" href="#" id="registerDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                        Register
                                    </a>
                                    <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="userDropdown">
                                        <li><a class="dropdown-item" asp-area="Identity" asp-controller="Register" asp-action="PatientRegister">Register As A Patient</a></li>
                                        <li><hr class="dropdown-divider"></li>
                                        <li><a class="dropdown-item" asp-area="Identity" asp-controller="Register" asp-action="RegisterApply">Work With Us</a></li>
                                    </ul>

