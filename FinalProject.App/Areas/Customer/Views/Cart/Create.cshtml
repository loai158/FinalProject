@model FinalProject.Core.Feature.Cart.Requests.CartRequest

@{
    ViewData["Title"] = "Create";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />

<div class="container mt-5">
    <h2 class="mb-4">Create Cart</h2>
    <div class="row justify-content-center">
        <div class="col-md-6">
            <form asp-action="Create" class="border p-4 shadow rounded bg-light">
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                  <div class="mb-3">  
                      <label asp-for="ApplicationUserId" class="form-label"></label>  
                     <input asp-for="ApplicationUserId" class="form-control" />  
                      <span asp-validation-for="ApplicationUserId" class="text-danger"></span>  
                 </div>  

                <div class="mb-3">
                    <label class="form-label">Doctor</label>
                    <select name="DoctorId" class="form-select">
                        <option disabled selected>-- Select Doctor --</option>
                        @foreach (var item in ViewBag.Drs)
                        {
                            <option value="@item.Id">@item.Name</option>
                        }
                    </select>
                </div>

                <div class="mb-3">
                    <label asp-for="AppointmentId" class="form-label"></label>
                    <input asp-for="AppointmentId" class="form-control" />
                    <span asp-validation-for="AppointmentId" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="PaymentType" class="form-label"></label>
                    <select asp-for="PaymentType" class="form-select" asp-items="Html.GetEnumSelectList<FinalProject.Core.Feature.Cart.Requests.TypePayment>()">
                        <option disabled selected>-- Select Payment Type --</option>
                    </select>
                    <span asp-validation-for="PaymentType" class="text-danger"></span>
                </div>

                <div class="d-grid">
                    <input type="submit" value="Create" class="btn btn-primary" />
                </div>
            </form>

            <div class="mt-3 text-center">
                <a asp-action="Index" class="btn btn-secondary">Back to List</a>
            </div>
        </div>
    </div>
</div>

 