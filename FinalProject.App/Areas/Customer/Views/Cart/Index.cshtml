@using FinalProject.Core.Feature.Cart.Responces
@model IEnumerable<GetAllResponce>

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />

<div class="container mt-5">
    <h2 class="mb-4">Doctors List</h2>
    <table class="table table-bordered table-striped text-center">
        <thead class="table-dark">
            <tr>
                <th>#</th>
                <th>Doctor Name</th>
                <th>Doctor Phone</th>
                <th>Doctor AppointDate</th>
                <th>Doctor Image</th>
                <th>Doctor PaymentType</th>
            </tr>
        </thead>
        <tbody>
            @if (Model != null && Model.Any())
            {
                int index = 1;
                foreach (var item in Model)
                {
                    <tr>
                        <td>@index</td>
                        <td>@item.DocName</td>
                        <td>@item.DocPhone</td>
                        <td>@item.AppointDate</td>
                       
                        <td>
                            <img src="~/images/Doctors/@item.DocImage" alt="Doctor Image" width="100" height="100" class="rounded" />
                        </td>
                        <td>@item.PaymentType</td>
                    </tr>
                    index++;
                }
            }
            else
            {
                <tr>
                    <td colspan="3">No data available</td>
                </tr>
            }
        </tbody>
    </table>

    <a href="/Customer/Cart/Create" class="btn btn-primary">Create</a>
</div>
