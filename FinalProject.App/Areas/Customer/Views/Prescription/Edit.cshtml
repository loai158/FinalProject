@model FinalProject.Data.Models.AppModels.Perscribtion

<h2>@(Model.Id == 0 ? "Edit Prescription" : "Edit Prescription")</h2>

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="AppointmentId" />

    <div class="mb-3">
        <label asp-for="PerscribtionMedicines" class="form-label"></label>
        <textarea asp-for="PerscribtionMedicines" class="form-control"></textarea>
        <span asp-validation-for="PerscribtionMedicines" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Save</button>
    <a asp-action="Index" asp-controller="Appointment" class="btn btn-secondary ms-2">Cancel</a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
