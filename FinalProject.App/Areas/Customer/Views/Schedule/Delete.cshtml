@model FinalProject.Data.Models.AppModels.DoctorSchedule

@{
    ViewData["Title"] = "Delete Schedule";
}

<h2 class="mb-3 text-danger">Are you sure you want to delete this schedule?</h2>

<div class="mb-4">
    <dl class="row">
        <dt class="col-sm-3">Day</dt>
        <dd class="col-sm-9">@Model.Day</dd>

        <dt class="col-sm-3">Start Time</dt>
        <dd class="col-sm-9">@Model.StartTime.ToString(@"hh\:mm")</dd>

        <dt class="col-sm-3">End Time</dt>
        <dd class="col-sm-9">@Model.EndTime.ToString(@"hh\:mm")</dd>

        <dt class="col-sm-3">Status</dt>
        <dd class="col-sm-9">
            @if (Model.IsAvailable)
            {
                <span class="badge bg-success">Available</span>
            }
            else
            {
                <span class="badge bg-secondary">Not Available</span>
            }
        </dd>
    </dl>
</div>

<form asp-action="DeleteConfirmed" method="post">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
