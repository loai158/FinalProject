@model IEnumerable<FinalProject.Data.Models.AppModels.Doctor>

<div class="row mt-4">
    @if (!Model.Any())
    {
        <div class="col-12 text-center py-5">
            <div class="alert alert-info">
                <i class="fas fa-info-circle fa-2x mb-3"></i>
                <h3>No doctors found</h3>
                <p class="mb-0">Please check back later or try a different search.</p>
            </div>
        </div>
    }

    @foreach (var item in Model)
    {
        <div class="col-lg-4 col-md-6 mb-4">
            <div class="card doctor-card h-100 border-0 shadow-sm hover-shadow transition-all">
                <div class="card-img-top position-relative overflow-hidden" style="height: 280px;">
                    <img src="~/images/Doctors/@item.Image" class="w-100 h-100 object-fit-cover" alt="@item.Name" onerror="this.src='/images/default-doctor.jpg'">
                    <div class="department-badge">
                        <span class="badge bg-primary">@item.Department.Name</span>
                    </div>
                </div>

                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-start mb-3">
                        <h4 class="card-title text-dark mb-0">Dr. @item.Name</h4>
                        <span class="gender-badge badge @(item.Gender.ToString() == "Male" ? "bg-info" : "bg-pink")">
                            <i class="fas @(item.Gender.ToString() == "Male" ? "fa-mars" : "fa-venus")"></i>
                        </span>
                    </div>

                    <div class="doctor-info mb-3">
                        <div class="info-item">
                            <i class="fas fa-envelope text-secondary me-2"></i>
                            <span class="text-dark">@item.Email</span>
                        </div>
                        <div class="info-item">
                            <i class="fas fa-phone-alt text-secondary me-2"></i>
                            <span class="text-dark">@item.Phone</span>
                        </div>
                    </div>

                    <div class="bio-section mb-3">
                        <h6 class="text-muted mb-2">About</h6>
                        <p class="bio-text text-dark">@(string.IsNullOrEmpty(item.Details) ? "No bio available" : item.Details)</p>
                    </div>

                    <div class="schedule-section">
                        <h6 class="text-muted mb-2">Availability</h6>
                        @if (item.DoctorSchedules != null && item.DoctorSchedules.Any())
                        {
                            <div class="schedule-days">
                                @foreach (var schedule in item.DoctorSchedules)
                                {
                                    <div class="day-time mb-1">
                                        <span class="day-badge">@schedule.Day</span>
                                        <span class="time-slot text-dark">
                                            @schedule.StartTime.ToString(@"hh\:mm") - @schedule.EndTime.ToString(@"hh\:mm")
                                        </span>
                                    </div>
                                }
                            </div>
                        }
                        else
                        {
                            <div class="text-muted small">Schedule not available</div>
                        }
                    </div>
                </div>

                <div class="card-footer bg-white border-0 pt-0 pb-3">
                    <a href="/Customer/Cart/Create?doctorId=@item.Id" class="btn btn-primary w-100 py-2">
                        <i class="far fa-calendar-check me-2"></i>Book Appointment
                    </a>
                </div>
            </div>
        </div>
    }
</div>

<style>
    .doctor-card {
        border-radius: 12px;
        overflow: hidden;
        transition: transform 0.3s ease, box-shadow 0.3s ease;
        background-color: #f8f9fa;
    }

        .doctor-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 10px 20px rgba(0,0,0,0.1);
        }

    .department-badge {
        position: absolute;
        top: 15px;
        left: 15px;
    }

    .gender-badge {
        border-radius: 50%;
        width: 28px;
        height: 28px;
        display: flex;
        align-items: center;
        justify-content: center;
    }

    .bg-pink {
        background-color: #ff6b9d;
    }

    .info-item {
        display: flex;
        align-items: center;
        margin-bottom: 8px;
    }

    .bio-text {
        display: -webkit-box;
        -webkit-line-clamp: 3;
        -webkit-box-orient: vertical;
        overflow: hidden;
        text-overflow: ellipsis;
        color: #343a40;
    }

    .schedule-days {
        max-height: 120px;
        overflow-y: auto;
        padding-right: 8px;
    }

    .day-time {
        display: flex;
        align-items: center;
        margin-bottom: 6px;
    }

    .day-badge {
        background: #e9ecef;
        color: #495057;
        padding: 3px 8px;
        border-radius: 4px;
        font-size: 0.8rem;
        min-width: 70px;
        text-align: center;
        margin-right: 10px;
        font-weight: 500;
    }

    .time-slot {
        font-size: 0.9rem;
        color: #212529;
    }

    .hover-shadow {
        box-shadow: 0 4px 8px rgba(0,0,0,0.05);
    }

    .transition-all {
        transition: all 0.3s ease;
    }

    .object-fit-cover {
        object-fit: cover;
    }

    .card-body {
        background-color: #ffffff;
    }

    .text-dark {
        color: #212529 !important;
    }
</style>