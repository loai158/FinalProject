@model FinalProject.Data.Models.SendEmailModel.Email

@{
    ViewData["Title"] = "Send Email";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow rounded">
                <div class="card-header bg-primary text-white">
                    <h4 class="mb-0">Send Email</h4>
                </div>
                <div class="card-body">
                    <form asp-action="SendEmail" method="post">
                        <input type="hidden" name="userId" value="@ViewBag.UserId" /> 

                        <div class="mb-3">
                            <label asp-for="To" class="form-label">Recipient Email</label>
                            <input asp-for="To" class="form-control" readonly />
                            <span asp-validation-for="To" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Subject" class="form-label">Subject</label>
                            <input asp-for="Subject" class="form-control" placeholder="Enter subject here..." />
                            <span asp-validation-for="Subject" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Body" class="form-label">Message</label>
                            <textarea asp-for="Body" class="form-control" rows="6" placeholder="Write your message..."></textarea>
                            <span asp-validation-for="Body" class="text-danger"></span>
                        </div>

                        <div class="d-flex justify-content-between">
                            <a asp-action="Index" class="btn btn-outline-secondary">Back</a>
                            <button type="submit" class="btn btn-success">Send Email</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
